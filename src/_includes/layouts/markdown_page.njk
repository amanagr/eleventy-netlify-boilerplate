---
layout: layouts/base.njk
---

<style>
	.markdown-content {
		background-color: hsl(0, 0%, 100%);
		color: hsl(0, 0%, 0%);
		margin: 0;
	}

	.content-container {
		max-width: 780px;
		margin: auto;
		padding: 20px 1px;
		line-height: 1.625rem;
	}

	.navbar {
		background: transparent;
		position: absolute;
		z-index: 1;
		width: 100%;
	}

	.hero {
		position: relative;
		background-image: url("{% background_image hero_image %}");
		background-size: cover;
		background-position: center;
		padding: 225px 50px 125px 50px;
		color: hsl(0, 0%, 100%);
		z-index: 0;
	}

	.bg-dimmer {
		z-index: 0;
		position: absolute;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		background-color: hsla(224,52%,12%,.7);
		z-index: -1;
	}
</style>
<div class="container-fluid hero text-center">
	<div class="bg-dimmer"></div>
	<h1>{{ title }}</h1>
	<p class="sub-title">{{ sub_title }}</p>
</div>
<div class="container-fluid markdown-content p-4">
	<div class="content-container">
		{% if description %}
			{{ description | markdown | safe }}
		{% else %}
			{{ content | safe }}
		{% endif %}
	</div>
</div>
