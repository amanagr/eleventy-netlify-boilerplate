---
layout: layouts/base.njk
---

<div class="pricing-page container-xl">
    <div class="row">
        <div class="col-xxl-2 pricing-header pb-5">
            <h1 class="text-uppercase">Plans & Pricing</h1>
            <h6>Get started today<h6>
        </div>
        <div class="col-xxl-10">
            <div class="row g-4">
                <div class="col-lg-6">
                    <h2 class="plan-catergory text-center">Zulip <span class="color-gradient">Cloud</span></h2>
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="plan-box">
                                <div class="plan-title">
                                    <h5 class="text-uppercase pt-4">Lite</h5>
                                    <h1 class="text-uppercase pl-3 pb-0 color-dark-blue">Free</h1>
                                </div>

                                <div class="desktop-top-features">
                                        <div class="feature">
                                            <p>10,000 messages of search history</p>
                                        </div>
                                        <div class="feature">
                                            <p>File storage up to 5 GB total</p>
                                        </div>
                                        <div class="feature">
                                            <p>No sysadmin work required</p>
                                        </div>
                                        <div class="my-3 text-center">
                                            <button type="button" class="btn btn-primary w-100">Sign up for Lite</button>
                                        </div>
                                        <div class="asterisk-detail">
                                            <p class="mb-0">Try Zulip for an unlimited period of time</p>
                                        </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="plan-box">
                                <div class="plan-title">
                                    <h5 class="text-uppercase mb-0 pt-4">Standard</h5>
                                    <div class="text-uppercase">
                                        <p class="title pb-0"><span class="price-sign">$</span>6<span class="price-sign">.67</span><span class="price-detail">/user/month*</span></p>
                                    </div>
                                </div>
                                <div class="desktop-top-features">
                                        <div class="feature">
                                            <p>Full search history</p>
                                        </div>
                                        <div class="feature">
                                            <p>File storage up to 10 GB per user</p>
                                        </div>
                                        <div class="feature">
                                            <p>Priority commercial support</p>
                                        </div>
                                    <div class="my-3 text-center">
                                        <button type="button" class="btn btn-primary w-100 px-0"><span class="m-auto">Start 60 day free trial</span></button>
                                    </div>
                                    <div class="asterisk-detail">
                                        <p class="mb-0">*Billed annually</p>
                                        <p class="mb-0">$8/month billed monthly</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <h2 class="plan-catergory text-center">Zulip <span class="color-green">On-Premise</span></h2>
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="plan-box"></div>
                        </div>
                        <div class="col-sm-6">
                            <div class="plan-box"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
