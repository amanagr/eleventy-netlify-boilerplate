---
layout: layouts/base.njk
---
<!-- Font Awesome Free icons, registered under amanagr@zulip.com -->
<script src="https://kit.fontawesome.com/c93fdfe998.js" crossorigin="anonymous"></script>

<div class="home_page apps_page text-center text-lg-left {{platform}}">
    <div class="container py-5">
        <div class="row hero-row">
            <div class="col-lg-5 m-auto underline-link">
                <h1>{{ app_heading }}</h1>
                <p>
                    {{ app_description | markdown | safe }}
                </p>
                <div class="mt-5 text-uppercase download-buttons-section">
                    <button class="btn btn-secondary watch-now" onclick="go_to_app_download_link('{{ platform }}')">
<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cloud-download" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383z"/>
  <path fill-rule="evenodd" d="M7.646 15.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 14.293V5.5a.5.5 0 0 0-1 0v8.793l-2.146-2.147a.5.5 0 0 0-.708.708l3 3z"/>
</svg>                       Download
                    </button>
                    <a class="download-from-google-play-store" hidden="" href="https://play.google.com/store/apps/details?id=com.zulipmobile"><img src="/images/google-play-badge.png" alt="Google play badge"></a>
                    <a id="download-android-apk" href="https://github.com/zulip/zulip-mobile/releases/latest/download/app-release.apk">or manually download APK</a>
                    <a class="download-from-app-store" hidden="" href="https://itunes.apple.com/us/app/zulip/id1203036395"><img src="/images/app-store-badge.svg" alt="Apple store badge"></a>
                </div>
            </div>
            <div class="col-lg-7 apps_image_container">
                {% Image app_image, "Preview of Zulip app",  "homepage_hero_img" %}
            </div>
        </div>
    </div>
    <div class="container-fluid apps-section py-5">
        <h3>Apps for every platform</h3>
        <div class="apps">
            <a class="" href="/apps/mac.html">
                <i class="icons fab fa-apple" data-label="macOS"></i>
            </a>
            <a class="" href="/apps/windows.html">
                <i class="icons fab fa-windows" data-label="Windows"></i>
            </a>
            <a class="" href="/apps/linux.html">
                <i class="icons fab fa-linux" data-label="Linux"></i>
            </a>
            <a class="" href="/apps/android.html">
                <i class="icons fab fa-android" data-label="Android"></i>
            </a>
            <a class="" href="/apps/ios.html">
                <i class="icons fas fa-mobile-alt" data-label="iOS"></i>
            </a>
        </div>
        <div id="third-party-apps">
            Zulip also works great in pinned browser tabs and
            multi-protocol desktop chat apps
            like <a href="https://rambox.pro">Rambox</a>
            and <a href="https://getferdi.com">Ferdi</a>.
        </div>
    </div>
</div>
